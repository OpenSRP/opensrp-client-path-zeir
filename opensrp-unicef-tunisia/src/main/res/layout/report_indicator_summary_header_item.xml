<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reportGroupHeaderTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/indicator_summary_header_size"
        app:layout_constraintBottom_toTopOf="@+id/indicatorLabelTextView"
        app:layout_constraintEnd_toStartOf="@+id/collapsibleImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/collapsibleImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/indicatorLabelTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/expand_more" />

    <TextView
        android:id="@+id/indicatorLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="start"
        android:text="@string/indicator"
        android:textAlignment="textStart"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/indicator_text_size"
        app:layout_constraintBottom_toTopOf="@+id/labelSeparatorLineView"
        app:layout_constraintEnd_toStartOf="@+id/valueLabelTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/valueLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/value"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/indicator_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/indicatorLabelTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/labelSeparatorLineView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/indicator_table_divider_height"
        android:background="@color/client_list_header_dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
